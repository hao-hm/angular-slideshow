@import url(https://fonts.googleapis.com/icon?family=Material%20Icons)

.slider {
  width: 800px;
  height: 400px;
  overflow: hidden;
  position: relative;
  background: #e6e6e6;
  border: 20px solid #FFF;
  margin-top: 20px;
}

.slide {
  position: absolute;
  top 0
  left 0
}


.slide.ng-hide-add,
.slide.ng-hide-remove
{
  transition: 1000ms cubic-bezier(0.250, 0.250, 0.750, 0.750) all;
}

.slide.ng-hide-add {
  left: 0;
}
.slide.ng-hide-add.ng-hide-add-active {
  left: -100%;
}

.slide.ng-hide-remove {
  left: 100%;
}
.slide.ng-hide-remove.ng-hide-remove-active{
  left: 0;
}

.arrow {
  position: absolute;
  z-index: 1002;
  display: block;
  top: 50%;
  margin-top: -35px;
  width: 36px;
  height: 71px;
  outline: none;
  cursor: pointer;
}

.arrow.prev {
  opacity: 0.2;
  left: 20px;
  transition: 0.2s linear all;
}

.arrow.next {
  opacity: 0.2;
  right: 20px;
  transition: 0.2s linear all;
}

.arrow.prev:hover {
  opacity: 1;
}

.arrow.next:hover {
  opacity: 1;
}

.material-icons.md-48
  font-size 48px

